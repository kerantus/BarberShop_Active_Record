<h4>Автор поста: <%= @post["name"] %></h4>
<p><%= @post["content"] %></p>


<h4>Коментарии</h4>
</br>
<% @comment.each do |value| %>
    <p><%= value["name"] %></p>
    <p><%= value["content"] %></p>
    <p style="font-size: 60%; color: #999"><%= value["created_at"] %></p>
    </br>
<% end %>

<p>
<form action="/details/<%= @post["id"] %>" method="POST" role="form">
